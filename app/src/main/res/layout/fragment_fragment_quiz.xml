<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textDomanda"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:text="Domanda"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/rispostaA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rispostaB"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="A"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/rispostaB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rispostaC"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="B"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/rispostaC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rispostaD"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="C"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/rispostaD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="13dp"
        android:background="@color/colorPrimary"
        android:text="D"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/Avanti"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="412dp"
        android:background="@color/colorPrimary"
        android:text="Avanti"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>