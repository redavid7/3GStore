<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- button Bar Code -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/aggiungi_codice_barre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="#D21920"
        app:srcCompat="@drawable/barcode_icon" />

    <!-- button NFC -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/aggiungi_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="#D21920"
        app:srcCompat="@drawable/nfc_icon" />

    <!-- button QR Code -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/aggiungi_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="#D21920"
        app:srcCompat="@drawable/qrcode_icon" />

</FrameLayout>