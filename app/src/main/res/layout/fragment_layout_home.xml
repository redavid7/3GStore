<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.09">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_view_carrellovuoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="@string/lista_vuota"
            android:textSize="@dimen/splash_title"
            android:visibility="invisible"
            app:layout_anchor="@+id/image_view_carrellovuoto"
            app:layout_anchorGravity="bottom|center"
            android:layout_gravity="bottom|center"
            />

        <ImageView
            android:id="@+id/image_view_carrellovuoto"
            android:layout_width="@dimen/carrellovuoto"
            android:layout_height="@dimen/carrellovuoto"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:alpha="0.3"
            android:visibility="invisible"
            app:srcCompat="@drawable/empty_shopping_kart" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/aggiungi_prodotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="#D21920"
            app:srcCompat="@drawable/camera_icon" />

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCarrelloTotale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <TextView
            android:background="@drawable/shape_textview"
            android:id="@+id/totaleCarrello"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/shopping_amount"
            android:gravity="center"
            android:layout_gravity="bottom"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>




