<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
     >

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:ignore="ExtraText">


        <ImageView
            android:id="@+id/marangiCoinImageView"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/marangiCoin"
            android:src="@drawable/logo3gstore" />

        <TextView
            android:id="@+id/current_MC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marangiCoinImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="64dp"
            android:text="@string/your_marangiCoin"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp" />


        <RelativeLayout
            android:id="@+id/relative_layout_switch_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_MC"
            android:layout_marginTop="37dp">

            <EditText
                android:id="@+id/marangiCoin_amount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@id/marangiCoinImageView2"
                android:hint="@string/marangiCoin_exchange"
                android:inputType="number"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/marangiCoinImageView2"
                android:layout_width="36dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:alpha="0.6"
                app:srcCompat="@drawable/switch_marangicoin_image" />

            <TextView
                android:id="@+id/marangiCoin_exchange"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/marangiCoinImageView2"
                android:hint="@string/euro_exchange"

                android:inputType="number"
                android:textSize="14dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/marangiCoinTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_switch_data"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="8dp"
            android:text="@string/exchange_marangiCoin"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/current_discount_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marangiCoinTextView2"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:text="@string/current_discount"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp" />


        <Button
            android:id="@+id/exchange_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_discount_display"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="131dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:text="@string/exchange_button"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>