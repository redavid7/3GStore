<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">



    <ImageView
        android:id="@+id/marangiCoinImageView"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/marangiCoin"
        android:src="@drawable/logo3gstore"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/marangiCoinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marangiCoinImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="33dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/current_MC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marangiCoinImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="91dp"
        android:text="@string/your_marangiCoin"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp" />


    <RelativeLayout
        android:id="@+id/relative_layout_switch_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/marangiCoinTextView"
        android:layout_marginTop="97dp">

        <EditText
            android:id="@+id/marangiCoin_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@id/marangiCoinImageView2"
            android:hint="@string/marangiCoin_exchange"
            android:inputType="number"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/marangiCoinImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:alpha="0.6"
            app:srcCompat="@drawable/switch_marangicoin_image" />

        <TextView
            android:id="@+id/marangiCoin_exchange"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/marangiCoinImageView2"
            android:hint="@string/euro_exchange"
            android:inputType="number"

            android:textSize="24dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/marangiCoinTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_switch_data"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="8dp"
        android:text="@string/exchange_marangiCoin"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/current_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_switch_data"
        android:layout_marginTop="159dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/current_discount_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_switch_data"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="8dp"
        android:text="@string/current_discount"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp" />


    <Button
        android:id="@+id/exchange_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/colorPrimary"
        android:text="@string/exchange_button"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        />







</RelativeLayout>